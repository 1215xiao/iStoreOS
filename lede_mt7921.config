
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y
CONFIG_TARGET_ROOTFS_PARTSIZE=2048
CONFIG_TARGET_ROOTFS_INCLUDE_DOCKER=y
CONFIG_GRUB_IMAGES=y
CONFIG_EFI_IMAGES=y

# 默认设置通过 default-settings 实现 root/password, eth2 为 WAN, 192.168.100.1
CONFIG_PACKAGE_default-settings=y

# LUCI 基础与中文
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# MT7921 驱动支持
CONFIG_PACKAGE_kmod-mt76-core=y
CONFIG_PACKAGE_kmod-mt76-connac-lib=y
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt76-pci=y
CONFIG_PACKAGE_kmod-mt7921e=y
CONFIG_PACKAGE_mt76-fw=y
CONFIG_PACKAGE_mt7921-firmware=y

# 科学上网
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_luci-app-clash=y
CONFIG_PACKAGE_luci-app-openclash=y

# DNS & 广告过滤
CONFIG_PACKAGE_luci-app-dnsfilter=y
CONFIG_PACKAGE_luci-app-adbyby-plus=y
CONFIG_PACKAGE_luci-app-adguardhome=y
CONFIG_PACKAGE_luci-app-mosdns=y
CONFIG_PACKAGE_luci-app-smartdns=y

# 推送/远程控制/DDNS
CONFIG_PACKAGE_luci-app-pushbot=y
CONFIG_PACKAGE_luci-app-ddnsto=y
CONFIG_PACKAGE_luci-app-ddns-go=y
CONFIG_PACKAGE_luci-app-aliddns=y
CONFIG_PACKAGE_luci-app-dynamic_dns=y

# 加速器 / 穿透 / 解锁
CONFIG_PACKAGE_luci-app-unblockneteasemusic=y
CONFIG_PACKAGE_luci-app-leishenbooster=y
CONFIG_PACKAGE_luci-app-uugamebooster=y
CONFIG_PACKAGE_luci-app-kms=y
CONFIG_PACKAGE_luci-app-frpc=y
CONFIG_PACKAGE_luci-app-nps=y

# 文件共享 / 云盘
CONFIG_PACKAGE_luci-app-easyexplorer=y

# 网络管理增强
CONFIG_PACKAGE_luci-app-mentohust=y
CONFIG_PACKAGE_luci-app-control-webrestriction=y
CONFIG_PACKAGE_luci-app-zerotier=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-iptvhelper=y
CONFIG_PACKAGE_luci-app-udpxy=y
CONFIG_PACKAGE_luci-app-airplay2=y
CONFIG_PACKAGE_luci-app-omcproxy=y
CONFIG_PACKAGE_luci-app-qosv4=y
CONFIG_PACKAGE_luci-app-mwan3helper=y

# VPN
CONFIG_PACKAGE_luci-app-openvpn=y

# Docker 容器
CONFIG_PACKAGE_docker=y
CONFIG_PACKAGE_luci-app-dockerman=y
